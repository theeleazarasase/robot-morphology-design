<mujoco model="two_link_arm">
    <compiler angle="radian" coordinate="local"/>
    <option timestep="0.01" gravity="0 0 -9.81"/>

    <worldbody>
        <!-- Fixed base -->
        <body name="base" pos="0 0 0">
            <geom type="sphere" size="0.05" rgba="0.8 0.2 0.2 1"/>

            <!-- First link -->
            <body name="link1" pos="0 0 0">
                <geom type="capsule" fromto="0 0 0 0 0 -0.5" size="0.05" rgba="0.2 0.2 0.8 1"/>
                <joint name="joint1" type="hinge" axis="0 1 0" range="-3.14 3.14"/>

                <!-- Second link connected to first link -->
                <body name="link2" pos="0 0 -0.5">
                    <geom type="capsule" fromto="0 0 0 0 0 -0.5" size="0.04" rgba="0.2 0.8 0.2 1"/>
                    <joint name="joint2" type="hinge" axis="0 1 0" range="-3.14 3.14"/>
                </body>
            </body>
        </body>
    </worldbody>

    <actuator>
        <motor joint="joint1" ctrlrange="-1 1" gear="1"/>
        <motor joint="joint2" ctrlrange="-1 1" gear="1"/>
    </actuator>
</mujoco>
